<% layout('layouts/boilerplate')%>
    <h1>Edit this campground</h1>

    <form action="/campgrounds/<%=campground._id%>?_method=PATCH" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="campground[name]" value="<%=campground.name%>">
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]" value="<%=campground.location%>">
        <button>Submit</button>
    </form>

    <a href="/campgrounds/<%=campground._id%>">Cancel</a>
